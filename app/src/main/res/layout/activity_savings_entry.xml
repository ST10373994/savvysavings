<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.ssba.savvy_savings_app.models.SavingsEntryViewModel" />
        <!-- ^ FIXED: Added "com.ssba." prefix to the path ^ -->
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_dark"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW ENTRY"
                android:textColor="@color/brand_primary"
                android:textSize="12sp"
                android:letterSpacing="0.2"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add A Saving"
                android:textColor="@color/text_primary"
                android:textSize="26sp"
                android:fontFamily="sans-serif-black"
                android:layout_marginBottom="24dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/surface_dark"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/field_border"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Title -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Saving Title"
                        android:textColorHint="@color/text_secondary"
                        app:boxStrokeColor="@color/brand_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:text="@={viewmodel.titleOrName}" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Amount -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Amount"
                        android:textColorHint="@color/text_secondary"
                        app:boxStrokeColor="@color/brand_primary"
                        app:prefixText="R "
                        app:prefixTextColor="@color/brand_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:inputType="numberDecimal"
                            android:text="@={viewmodel.amount}" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Date -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Date"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_calender_unfilled"
                        app:endIconTint="@color/brand_primary"
                        android:textColorHint="@color/text_secondary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSavingsDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:textColor="@color/text_primary"
                            android:text="@={viewmodel.date}" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Goal Spinner -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="4dp"
                        android:text="Select Goal"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/field_border_background"
                        android:backgroundTint="@color/bg_dark">
                        <Spinner
                            android:id="@+id/spinnerSavingsGoal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/brand_primary" />
                    </FrameLayout>

                    <!-- Description -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Description"
                        android:textColorHint="@color/text_secondary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDescription"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="top"
                            android:textColor="@color/text_primary"
                            android:text="@={viewmodel.description}" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSaveSavings"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:backgroundTint="@color/brand_primary"
                            android:text="Save Entry"
                            android:textStyle="bold"
                            app:cornerRadius="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancelSavings"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="8dp"
                            android:text="Cancel"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</layout>