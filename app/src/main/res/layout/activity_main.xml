<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    tools:context=".MainActivity">

    <!-- 1. Sleek Dark Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvWelcomeBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVVY SAVINGS"
                android:textColor="@color/brand_primary"
                android:textSize="12sp"
                android:letterSpacing="0.2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textColor="@color/text_primary"
                android:textSize="26sp"
                android:fontFamily="sans-serif-black" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnRewards"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/btn_rewards_background_round"
            android:backgroundTint="@color/surface_dark"
            android:src="@drawable/ic_gift_unfilled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/brand_primary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 2. Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintTop_toBottomOf="@id/clHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- GRAPH CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTransactionChart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="12dp"
                app:cardBackgroundColor="@color/surface_dark"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/field_border"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Financial Pulse"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- QUICK ACTIONS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Add Income -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnAddIncome"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/btn_add_income_background_rounded"
                        android:backgroundTint="@color/surface_dark"
                        app:strokeColor="@color/field_border"
                        app:strokeWidth="1dp"
                        android:src="@drawable/ic_cash_unfilled_white"
                        app:tint="@color/expense_neon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Income"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp"
                        android:textAllCaps="true" />
                </LinearLayout>

                <!-- Add Expense -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnAddExpense"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/btn_add_expense_background_rounded"
                        android:backgroundTint="@color/surface_dark"
                        app:strokeColor="@color/brand_primary"
                        app:strokeWidth="1dp"
                        android:src="@drawable/ic_expense_unfilled_white"
                        app:tint="@color/brand_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Expense"
                        android:textColor="@color/brand_primary"
                        android:textSize="11sp"
                        android:textAllCaps="true" />
                </LinearLayout>

                <!-- Add Savings -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btnAddSavings"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/btn_add_savings_background_rounded"
                        android:backgroundTint="@color/surface_dark"
                        android:src="@drawable/ic_savings_unfilled_white"
                        app:tint="@color/savings_neon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Savings"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp"
                        android:textAllCaps="true" />
                </LinearLayout>
            </LinearLayout>

            <!-- RECENT TRANSACTIONS -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="@color/surface_dark"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/field_border"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Transactions"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvRecentTransactions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp" />

                    <!-- RESTORED THIS ID -->
                    <TextView
                        android:id="@+id/tvNoTransactions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No recent transactions"
                        android:textColor="@color/text_secondary"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/nav_bg"
        app:itemIconTint="@color/brand_primary"
        app:itemTextColor="@color/text_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>