<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:fillViewport="true"
    tools:context=".budget.BudgetSettingsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/surface_dark"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/field_border"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Budget Settings"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp" />

                <!-- 1. Minimum Income Section -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/minIncomeInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:hint="Minimum Monthly Income"
                    android:textColorHint="@color/text_secondary"
                    app:boxStrokeColor="@color/brand_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/minIncomeInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- RESTORED: Error View for logic mapping -->
                <TextView
                    android:id="@+id/minIncomeErrorText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/expense_neon"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="Error message"
                    tools:visibility="visible" />

                <!-- 2. Maximum Expenses Section -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/maxExpensesInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Maximum Monthly Expenses"
                    android:textColorHint="@color/text_secondary"
                    app:boxStrokeColor="@color/brand_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/maxExpensesInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- RESTORED: Error View for logic mapping -->
                <TextView
                    android:id="@+id/maxExpensesErrorText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/expense_neon"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="Error message"
                    tools:visibility="visible" />


                <!-- Action Button Row -->
                <LinearLayout
                    android:id="@+id/actionButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="64dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cancelBtn"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:textColor="@color/text_secondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/saveBtn"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/brand_primary"
                        android:text="Save"
                        android:textStyle="bold"
                        app:cornerRadius="12dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>