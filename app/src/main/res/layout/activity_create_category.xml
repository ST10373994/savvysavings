<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewmodel"
            type="com.ssba.savvy_savings_app.models.CreateCategoryViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_dark"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/surface_dark"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/field_border"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:text="Add Category"
                        android:textColor="@color/text_primary"
                        android:textSize="24sp" />

                    <!-- 1. Category Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:hint="Category Name"
                        android:textColorHint="@color/text_secondary"
                        app:boxStrokeColor="@color/brand_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCategoryName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:text="@={viewmodel.categoryName}" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 2. ADDED: Category Description -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Description (e.g. Food, Rent)"
                        android:textColorHint="@color/text_secondary"
                        app:boxStrokeColor="@color/brand_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCategoryDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:text="@={viewmodel.categoryDescription}" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 3. Monthly Budget -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Monthly Budget"
                        android:textColorHint="@color/text_secondary"
                        app:prefixText="R "
                        app:prefixTextColor="@color/brand_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMaxMonthlyTotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textColor="@color/text_primary"
                            android:text="@={viewmodel.maximumMonthlyTotal}" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Photo Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Identify Category"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAttach"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="8dp"
                        android:text="Upload Icon/Photo"
                        android:textColor="@color/text_primary"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/field_border" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
                        app:strokeColor="@color/field_border"
                        app:strokeWidth="1dp"
                        tools:visibility="visible"
                        tools:src="@drawable/ic_default_image" />

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSaveCategory"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:backgroundTint="@color/brand_primary"
                            android:text="Save Category"
                            android:textStyle="bold"
                            app:cornerRadius="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancelCategory"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="8dp"
                            android:text="Discard"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</layout>